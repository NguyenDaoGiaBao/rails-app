<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10 col-md-12">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1 text-gray-800">
            <i class="fas fa-edit me-2 text-warning"></i>Edit Screen
          </h1>
          <p class="text-muted mb-0">Update details for this cinema screen</p>
        </div>
        <%= link_to screens_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to Screens
        <% end %>
      </div>

      <%= render "form" %>
    </div>
  </div>
</div>

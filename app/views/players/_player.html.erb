<tr id="row-player-<%= player.id %>">
  <td>
    <div class="media">
      <div class="avatar me-2">
        <% if player.avatar.attached? %>
          <%= image_tag url_for(player.avatar), class: "rounded-circle", alt: "avatar" %>
        <% else %>
          <%= image_tag "profile-26.jpeg", class: "rounded-circle", alt: "avatar"%>
        <% end %>

      </div>
      <div class="media-body align-self-center">
        <h6 class="mb-0 text-body"><%= player.first_name + ' ' + player.last_name %></h6>
      </div>
    </div>
  </td>
  <td class="text-center"><%= player.email %></td>
  <td class="text-center"><%= player.point %></td>
  <td class="text-center">
    <div class="action-btns">
      <a href="javascript:void(0);" class="action-btn btn-view bs-tooltip me-2" data-id="<%= player.id %>" data-placement="top" title="View" data-bs-toggle="modal" data-bs-target="#exampleModalCenter-<%= player.id %>">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
      </a>
      <% if policy(Player).edit? %>
      <a href="/players/<%= player.id %>" class="action-btn btn-edit bs-tooltip me-2" data-toggle="tooltip" data-placement="top" title="Edit">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2">
          <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
        </svg>
      </a>
      <% end %>
      <% if policy(Player).destroy? %>
        <a class="action-btn btn-delete bs-tooltip" data-toggle="tooltip" data-placement="top" title="Delete" data-id="<%= player.id %>">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
          </svg>
        </a>
      <% end %>
    </div>
  </td>
</tr>
<%= render "modal", player: player, id: player.id %>
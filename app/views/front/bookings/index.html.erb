<% content_for :title, "Đặt vé của tôi - CinemaKD" %>

<div class="space-y-12">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-gray-800 to-gray-600 rounded-xl p-8 text-white">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Vé xem phim của tôi
      </h1>
      <p class="text-xl mb-8">
        Kiểm tra các vé đã đặt và lịch chiếu sắp tới
      </p>
    </div>
  </section>

  <!-- My Bookings List -->
  <section>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Danh sách vé</h2>
      <%= link_to front_bookings_new_path, class: "inline-flex items-center px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-700 transition-colors" do %>
        <i class="fas fa-plus mr-2"></i> Đặt vé mới
      <% end %>
    </div>

    <% if @bookings.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @bookings.each do |booking| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:scale-[1.02] transition-transform">
            <div class="relative h-48 w-full bg-gray-200">
              <% if booking.showtime.movie.image_url.present? %>
                <img src="<%= booking.showtime.movie.image_url %>" alt="<%= booking.showtime.movie.title %>" class="w-full h-full object-cover">
              <% else %>
                <img src="/images/movie-placeholder.jpg" alt="Movie placeholder" class="w-full h-full object-cover">
              <% end %>
            </div>

            <div class="p-4">
              <h3 class="text-lg font-semibold mb-1 truncate">
                <%= booking.showtime.movie.title %>
              </h3>
              <p class="text-sm text-gray-600 mb-2">
                <i class="fas fa-calendar-alt mr-1 text-gray-500"></i>
                <%= l booking.showtime.start_time, format: "%H:%M - %d/%m/%Y" %>
              </p>
              <p class="text-sm text-gray-600 mb-2">
                <i class="fas fa-chair mr-1 text-gray-500"></i>
                Ghế: <%= booking.seat_numbers.join(", ") rescue booking.seat_number %>
              </p>
              <p class="text-sm text-gray-600 mb-2">
                <i class="fas fa-map-marker-alt mr-1 text-gray-500"></i>
                Rạp: <%= booking.showtime.screen.name %>
              </p>

              <div class="mt-3 flex justify-between items-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                  <%= case booking.booking_status
                      when "confirmed" then "bg-green-100 text-green-700"
                      when "cancelled" then "bg-red-100 text-red-700"
                      else "bg-yellow-100 text-yellow-700"
                      end %>">
                  <i class="fas fa-circle text-[6px] mr-2"></i>
                  <%= booking.booking_status.humanize %>
                </span>

                <%= link_to booking_path(booking), class: "text-gray-600 hover:text-gray-800 text-sm flex items-center" do %>
                  <i class="fas fa-ticket-alt mr-1"></i> Chi tiết
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-white rounded-lg shadow-md">
        <i class="fas fa-film text-5xl text-gray-400 mb-4"></i>
        <p class="text-gray-600 text-lg">Bạn chưa có vé nào được đặt.</p>
        <%= link_to "Đặt vé ngay", root_path, class: "mt-6 inline-block px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
      </div>
    <% end %>
  </section>
</div>

<% if flash[:notice] %>
	<div class="alert alert-primary alert-dismissible fade show mb-4" role="alert">
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
		<strong>Info!</strong> <%= flash[:notice] %>
	</div>
<% end %>
<% if flash[:alert] %>
	<div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
		<strong>Info!</strong> <%= flash[:alert] %>
	</div>
<% end %>

<div class="card mt-3 mb-3">
	<div class="card-body">
		<div class="row">
			<div class="col-md-12 mb-3">
				<h2>Sign In</h2>
				<p>Enter your email and password to login </p>
			</div>
			<%= form_with model: @login_req, url: auth_login_path do |form| %>
				<div class="col-md-12">
					<div class="mb-3">
						<%= form.label :email_address %>
						<%= form.email_field :email_address, class: "form-control", autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>
						<% if @login_req.errors[:email_address].any? %>
							<div class="text-danger">
								<%= @login_req.errors[:email_address].first %>
							</div>
						<% end %>
					</div>
				</div>
				<div class="col-12">
					<div class="mb-4">
						<%= form.label :password, class: "form-label" %>
						<%= form.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %>
						<% if @login_req.errors[:password].any? %>
							<div class="text-danger">
								<%= @login_req.errors[:password].first %>
							</div>
						<% end %>
					</div>
				</div>
				<div class="col-12">
					<div class="mb-4">
						<%= form.submit "SIGN IN", class: "btn btn-secondary w-100" %>
					</div>
				</div>
			<% end %>
			<div class="col-12">
				<div class="text-center">
					<p class="mb-0">Dont't have an account ?
					<%= link_to "Sign Up", register_path, class: "text-warning" %></p>
					<%= link_to "Forgot password?", new_password_path, class: "text-warning" %>
				</div>
			</div>
		</div>
	</div>
</div>